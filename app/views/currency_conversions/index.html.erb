<p style="color: green"><%= notice %></p>

<% content_for :title, "Currency Converter" %>

<div class="container-fluid hero">
  <div class="text-center mb-5">
    <h1 class="mb-4">Currency Converter</h1>
    <p class="fs-5">Convert between multiple currencies in an <b class="text-success">instant!</b></p>
  </div>

  <%= form_with model: @currency_conversion, local: true, html: {class: "hero-form shadow-lg rounded" } do |form|%>
    <div class="row w-full mb-5 hero-form-content">
      <%= render "form_fields", form: form %>
    </div>
    <div>
      <%= form.submit "Convert", class: "btn btn-primary btn-lg" %>
    </div>
<% end %>
</div>